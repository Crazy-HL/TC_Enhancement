{"ast":null,"code":"import { ref, computed, onMounted } from \"vue\";\nimport api from \"@/api\";\nimport HighFrequencyWords from \"./HighFrequencyWords.vue\";\nimport CommentStats from \"./CommentStats.vue\";\nconst defaultAvatar = \"data:image/svg+xml;base64,\";\n\n// 响应式数据\n\nexport default {\n  __name: 'ArticleContent',\n  setup(__props, _ref) {\n    let {\n      expose: __expose\n    } = _ref;\n    __expose();\n    const article = ref(null);\n    const sentences = ref([]);\n    const comments = ref([]);\n    const activeSentence = ref(null);\n    const loading = ref(true);\n    const error = ref(null);\n    const showInlineComments = ref(true);\n    const showPieCharts = ref(true);\n    const showContentHighlight = ref(true);\n    const showHighFrequencyWords = ref(true);\n    const visibleCommentTypes = ref({\n      1: true,\n      2: true,\n      3: true,\n      4: true,\n      5: true\n    });\n\n    // 计算属性\n    const globalComments = computed(() => {\n      return comments.value.filter(c => c?.link === -1);\n    });\n\n    // 方法\n    const loadData = async () => {\n      try {\n        loading.value = true;\n        error.value = null;\n        const [articleRes, commentsRes] = await Promise.all([api.get(\"article\"), api.get(\"comments\")]);\n\n        // 处理文章数据\n        if (articleRes?.data) {\n          article.value = Array.isArray(articleRes.data) ? articleRes.data[0] : articleRes.data;\n          if (article.value?.content_text) {\n            sentences.value = splitIntoSentences(article.value.content_text);\n          } else {\n            throw new Error(\"文章内容为空\");\n          }\n        } else {\n          throw new Error(\"未获取到文章数据\");\n        }\n\n        // 处理评论数据\n        if (commentsRes?.data) {\n          comments.value = Array.isArray(commentsRes.data) ? commentsRes.data : [commentsRes.data];\n        }\n      } catch (err) {\n        console.error(\"加载数据失败:\", err);\n        error.value = err.message || \"未知错误\";\n        article.value = null;\n        sentences.value = [];\n        comments.value = [];\n      } finally {\n        loading.value = false;\n      }\n    };\n    const splitIntoSentences = text => {\n      if (!text) return [];\n      const regex = /([^。！？.!?]+[。！？.!?]+)/g;\n      return [...text.matchAll(regex)].map(m => m[0].trim()).filter(Boolean);\n    };\n    const getCommentsForSentence = index => {\n      return comments.value.filter(c => c?.link === index && visibleCommentTypes.value[getCommentType(c)]);\n    };\n    const hasComments = index => getCommentsForSentence(index).length > 0;\n    const getTopComment = index => {\n      const comments = getCommentsForSentence(index);\n      return comments.length ? [...comments].sort((a, b) => b.like_count - a.like_count)[0] : null;\n    };\n    const getCommentType = comment => comment?.comment_type || 1;\n    const getCommentLevel = index => {\n      const count = getCommentsForSentence(index).length;\n      return {\n        level: Math.min(Math.floor(count / 3) + 1, 5),\n        type: getCommentType(getTopComment(index))\n      };\n    };\n    const toggleActiveSentence = index => {\n      activeSentence.value = activeSentence.value === index ? null : index;\n    };\n    const toggleCommentTypeVisibility = type => {\n      visibleCommentTypes.value[type] = !visibleCommentTypes.value[type];\n    };\n    const formatNumber = num => {\n      if (!num && num !== 0) return \"0\";\n      return num >= 1000 ? (num / 1000).toFixed(1) + \"k\" : num;\n    };\n    const formatTime = timestamp => {\n      if (!timestamp) return \"未知时间\";\n      return new Date(timestamp * 1000).toLocaleString();\n    };\n    const handleAvatarError = e => {\n      e.target.src = defaultAvatar;\n    };\n    const handleWordClick = _ref2 => {\n      let {\n        word,\n        frequency\n      } = _ref2;\n      console.log(`高频词 \"${word}\" 被点击，出现 ${frequency} 次`);\n    };\n\n    // 初始化加载\n    onMounted(() => {\n      loadData();\n    });\n    const __returned