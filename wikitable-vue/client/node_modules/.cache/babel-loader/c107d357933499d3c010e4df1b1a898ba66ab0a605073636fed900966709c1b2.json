t\t<!-- 文章内容（分句显示） -->\r\n\t\t\t<div class=\"article-content\">\r\n\t\t\t\t<span\r\n\t\t\t\t\tv-for=\"(sentence, index) in sentences\"\r\n\t\t\t\t\t:key=\"index\"\r\n\t\t\t\t\tclass=\"sentence\"\r\n\t\t\t\t\t:id=\"'sentence-' + index\"\r\n\t\t\t\t\t:data-sentence-id=\"index\"\r\n\t\t\t\t\t:class=\"{\r\n\t\t\t\t\t\t'has-comment': hasComments(index),\r\n\t\t\t\t\t\t[`comment-level-${getCommentLevel(index)}`]: hasComments(index)\r\n\t\t\t\t\t}\"\r\n\t\t\t\t\t@mouseenter=\"highlightComments(index)\"\r\n\t\t\t\t\t@mouseleave=\"unhighlightComments\">\r\n\t\t\t\t\t{{ sentence }}\r\n\r\n\t\t\t\t\t<!-- 批注标记 -->\r\n\t\t\t\t\t<sup v-if=\"hasComments(index)\" class=\"annotation-marker\">\r\n\t\t\t\t\t\t{{ getCommentsForSentence(index).length }}\r\n\t\t\t\t\t</sup>\r\n\r\n\t\t\t\t\t<!-- 批注连接线 -->\r\n\t\t\t\t\t<span\r\n\t\t\t\t\t\tv-if=\"activeSentence === index && hasComments(index)\"\r\n\t\t\t\t\t\tclass=\"annotation-connector\"></span>\r\n\t\t\t\t</span>\r\n\t\t\t</div>\r\n\r\n\t\t\t<!-- 右侧批注面板 -->\r\n\t\t\t<div\r\n\t\t\t\tclass=\"annotation-panel\"\r\n\t\t\t\tv-if=\"activeSentence !== null && hasComments(activeSentence)\">\r\n\t\t\t\t<div class=\"panel-header\">\r\n\t\t\t\t\t<h4>\r\n\t\t\t\t\t\t相关批注 ({{ getCommentsForSentence(activeSentence).length }})\r\n\t\t\t\t\t</h4>\r\n\t\t\t\t\t<button @click=\"activeSentence = null\" class=\"close-btn\">×</button>\r\n\t\t\t\t</div>\r\n\t\t\t\t<div class=\"panel-content\">\r\n\t\t\t\t\t<div\r\n\t\t\t\t\t\tv-for=\"comment in getCommentsForSentence(activeSentence)\"\r\n\t\t\t\t\t\t:key=\"comment.comment_id\"\r\n\t\t\t\t\t\tclass=\"annotation-item\">\r\n\t\t\t\t\t\t<div class=\"annotation-user\">\r\n\t\t\t\t\t\t\t<img\r\n\t\t\t\t\t\t\t\t:src=\"comment.user_avatar || defaultAvatar\"\r\n\t\t\t\t\t\t\t\tclass=\"avatar\"\r\n\t\t\t\t\t\t\t\t@error=\"handleAvatarError\" />\r\n\t\t\t\t\t\t\t<span class=\"username\">{{ comment.user_nickname }}</span>\r\n\t\t\t\t\t\t</div>\r\n\t\t\t\t\t\t<div class=\"annotation-text\">{{ comment.content }}</div>\r\n\t\t\t\t\t</div>\r\n\t\t\t\t</div>\r\n\t\t\t</div>\r\n\r\n\t\t\t<!-- 文章页脚 -->\r\n\t\t\t<div class=\"article-footer\">\r\n\t\t\t\t<div class=\"stats\">\r\n\t\t\t\t\t<span class=\"vote-count\">点赞：{{ article.voteup_count }}</span>\r\n\t\t\t\t\t<span class=\"comment-count\">评论：{{ article.comment_count }}</span>\r\n\t\t\t\t</div>\r\n\t\t\t\t<a :href=\"article.content_url\" target=\"_blank\" class=\"original-link\"\r\n\t\t\t\t\t>阅读原文</a\r\n\t\t\t\t>\r\n\t\t\t</div>\r\n\t\t</div>\r\n\t</div>\r\n</template>\r\n\r\n<script setup>\r\n\timport { ref, onMounted, computed } from \"vue\";\r\n\timport api from \"@/api\";\r\n\r\n\t// 默认头像\r\n\tconst defaultAvatar =\r\n\t\t\"data:image/svg+xml;base64,\";\r\n\r\n\t// 文章数据\r\n\tconst article = ref(null);\r\n\tconst sentences = ref([]);\r\n\tconst comments = ref([]);\r\n\tconst activeSentence = ref(null);\r\n\tconst articleContainer = ref(null);\r\n\r\n\t// 格式化时间\r\n\tconst formatTime = time => {\r\n\t\tif (!time) return \"\";\r\n\t\tconst date = new Date(time * 1000);\r\n\t\treturn date.toLocaleString();\r\n\t};\r\n\r\n\t// 分割句子的函数\r\n\tconst splitIntoSentences = text => {\r\n\t\tif (!text) return [];\r\n\t\tconst regex = /([^。！？.!?]+[。！？.!?]+)/g;\r\n\t\tconst result = [];\r\n\t\tlet match;\r\n\r\n\t\twhile ((match = regex.exec(text)) !== null) {\r\n\t\t\tconst sentence = match[0].trim();\r\n\t\t\tif (sentence.length > 0) {\r\n\t\t\t\tresult.push(sentence);\r\n\t\t\t}\r\n\t\t}\r\n\t\treturn result.length > 0 ? result : [text];\r\n\t};\r\n\r\n\t// 获取某句子的相关评论\r\n\tconst getCommentsForSentence = sentenceIndex => {\r\n\t\treturn comments.value.filter(comment => comment.link === sentenceIndex);\r\n\t};\r\n\r\n\t// 检查句子是否有评论\r\n\tconst hasComments = sentenceIndex => {\r\n\t\treturn getCommentsForSentence(sentenceIndex).length > 0;\r\n\t};\r\n\r\n\t// 获取评论等级 (1-5)\r\n\tconst getCommentLevel = sentenceIndex => {\r\n\t\tconst count = getCommentsForSentence(sentenceIndex).length;\r\n\t\treturn Math.min(Math.floor(count / 3) + 1, 5);\r\n\t};\r\