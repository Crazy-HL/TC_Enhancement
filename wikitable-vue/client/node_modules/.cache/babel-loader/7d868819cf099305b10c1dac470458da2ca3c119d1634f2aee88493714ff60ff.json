{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { ref, onMounted, computed, watch, nextTick } from \"vue\";\nimport api from \"@/api\";\nimport CommentStats from \"./CommentStats.vue\";\nconst defaultAvatar = \"data:image/svg+xml;base64,\";\nexport default {\n  __name: 'ArticleContent',\n  setup(__props, _ref) {\n    let {\n      expose: __expose\n    } = _ref;\n    __expose();\n    const article = ref(null);\n    const sentences = ref([]);\n    const comments = ref([]);\n    const activeSentence = ref(null);\n    const articleContainer = ref(null);\n    const annotationPanel = ref(null);\n    const connectionContainer = ref(null);\n    const showInlineComments = ref(true);\n\n    // 计算最大点赞数和回复数\n    const maxLikeCount = computed(() => {\n      if (!comments.value.length) return 100;\n      return Math.max(...comments.value.map(c => c.like_count), 100);\n    });\n    const maxReplyCount = computed(() => {\n      if (!comments.value.length) return 50;\n      return Math.max(...comments.value.map(c => c.sub_comment_count), 50);\n    });\n\n    // 计算滑动条步长\n    const likeStep = computed(() => Math.max(1, Math.floor(maxLikeCount.value / 50)));\n    const replyStep = computed(() => Math.max(1, Math.floor(maxReplyCount.value / 25)));\n\n    // 初始化阈值\n    const likeThreshold = ref(0);\n    const replyThreshold = ref(0);\n\n    // 数据加载后设置初始阈值\n    watch(comments, () => {\n      likeThreshold.value = Math.floor(maxLikeCount.value * 0.2);\n      replyThreshold.value = Math.floor(maxReplyCount.value * 0.2);\n    }, {\n      immediate: true\n    });\n    const connectionStyle = ref({\n      left: \"0px\",\n      top: \"0px\",\n      width: \"0px\",\n      transform: \"rotate(0deg)\"\n    });\n\n    // 更新阈值\n    const updateLikeThreshold = e => {\n      likeThreshold.value = parseInt(e.target.value);\n    };\n    const updateReplyThreshold = e => {\n      replyThreshold.value = parseInt(e.target.value);\n    };\n\n    // 格式化评论内容\n    const formatCommentContent = content => {\n      if (!content) return \"\";\n      const lastChar = content[content.length - 1];\n      const punctuation = /[。.！!？?，,；;、]/.test(lastChar) ? \"\" : \"。\";\n      return content + punctuation;\n    };\n\n    // 获取最高赞评论\n    const getTopComment = sentenceIndex => {\n      const comments = getCommentsForSentence(sentenceIndex);\n      if (comments.length === 0) return null;\n      return [...comments].sort((a, b) => b.like_count - a.like_count)[0];\n    };\n\n    // 判断是否显示内联评论\n    const showTopCommentInline = sentenceIndex => {\n      const topComment = getTopComment(sentenceIndex);\n      return topComment && topComment.like_count >= likeThreshold.value && topComment.sub_comment_count >= replyThreshold.value;\n    };\n\n    // 格式化数字显示\n    const formatNumber = num => {\n      if (!num && num !== 0) return \"0\";\n      if (num >= 1000) return (num / 1000).toFixed(1) + \"k\";\n      return num;\n    };\n\n    // 计算连接线位置\n    const updateConnectionLine = () => {\n      if (!activeSentence.value || !articleContainer.value || !annotationPanel.value || !connectionContainer.value) return;\n      const sentenceEl = document.getElementById(`sentence-${activeSentence.value}`);\n      if (!sentenceEl) return;\n      nextTick(() => {\n        const sentenceRect = sentenceEl.getBoundingClientRect();\n        const panelRect = annotationPanel.value.getBoundingClientRect();\n        const containerRect = connectionContainer.value.getBoundingClientRect();\n        const startX = sentenceRect.right;\n        const startY = sentenceRect.top + sentenceRect.height / 2;\n        const endX = panelRect.left;\n        const endY = panelRect.top + panelRect.height / 2;\n        const length = Math.sqrt(Math.pow(endX - startX, 2) + Math.pow(endY - startY, 2));\n        const angle = Math.atan2(endY - startY, endX - startX) * 180 / Math.PI;\n        connectionStyle.value = {\n          left: `${startX - containerRect.left}px`,\n          top: `${startY - containerRect.top}px`,\n          width: `${length}px`,\n          transform: `rotate(${angle}deg)`,\n          transformOrigin: \"0 0\"\n        };\n      });\n    };\n\n    // 格式化时间\n    const formatTime = time => {\n      if (!time) return \"\";\n      return new Date(time * 1000).toLocaleString();\n    };\n\n    // 分割句子\n    const splitIntoSentences = text => {\n      if (!text) return [];\n      const regex = /([^。！？.!?]+[。！？.!?]+)/g;\n      const result = [];\n      let match;\n      while ((match = regex.exec(text)) !== null) {\n        const sentence = match[0].trim();\n        if (sentence) result.push(sentence);\n      }\n      return result.length > 0 ? result : [text];\n    };\n\n    // 获取某句子的相关评论\n    const getCommentsForSentence = sentenceIndex => {\n      return comments.value.filter(comment => comment.link === sentenceIndex);\n    };\n\n    // 检查句子是否有评论\n    const hasComments = sentenceIndex => {\n      return getCommentsForSentence(sentenceIndex).length > 0;\n    };\n\n    // 获取评论等级 (1-5)\n    const getCommentLevel = sentenceIndex => {\n      const count = getCommentsForSentence(sentenceIndex).length;\n      return Math.min(Math.floor(count / 3) + 1, 5);\n    };\n\n    // 高亮相关评论\n    const highlightComments = index => {\n      if (hasComments(index)) {\n        activeSentence.value = index;\n        updateConnectionLine();\n      }\n    };\n\n    // 取消高亮\n    const unhighlightComments = () => {};\n\n    // 处理头像加载错误\n    const handleAvatarError = e => {\n      e.target.src = defaultAvatar;\n    };\n\n    // 全局评论\n    const globalComments = computed(() => {\n      return comments.value.filter(comment => comment.link === -1);\n    });\n\n    // 监听激活句子变化\n    watch(activeSentence, updateConnectionLine);\n    onMounted(() => {\n      api.get(\"article\", {}, data => {\n        article.value = data[0];\n        sentences.value = splitIntoSentences(data[0].content_text);\n      });\n      api.get(\"comments\", {}, data => {\n        comments.value = data;\n      });\n      window.addEventListener(\"resize\", updateConnectionLine);\n      window.addEventListener(\"scroll\", updateConnectionLine, true);\n    });\n    const __returned__ = {\n      defaultAvatar,\n      article,\n      sentences,\n      comments,\n      activeSentence,\n      articleContainer,\n      annotationPanel,\n      connectionContainer,\n      showInlineComments,\n      maxLikeCount,\n      maxReplyCount,\n      likeStep,\n      replyStep,\n      likeThreshold,\n      replyThreshold,\n      connectionStyle,\n      updateLikeThreshold,\n      updateReplyThreshold,\n      formatCommentContent,\n      getTopComment,\n      showTopCommentInline,\n      formatNumber,\n      updateConnectionLine,\n      formatTime,\n      splitIntoSentences,\n      getCommentsForSentence,\n      hasComments,\n      getCommentLevel,\n      highlightComments,\n      unhighlightComments,\n      handleAvatarError,\n      globalComments,\n      ref,\n      onMounted,\n      computed,\n      watch,\n      nextTick,\n      get api() {\n        return api;\n      },\n      CommentStats\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","computed","watch","nextTick","api","CommentStats","defaultAvatar","article","sentences","comments","activeSentence","articleContainer","annotationPanel","connectionContainer","showInlineComments","maxLikeCount","value","length","Math","max","map","c","like_count","maxReplyCount","sub_comment_count","likeStep","floor","replyStep","likeThreshold","replyThreshold","immediate","connectionStyle","left","top","width","transform","updateLikeThreshold","e","parseInt","target","updateReplyThreshold","formatCommentContent","content","lastChar","punctuation","test","getTopComment","sentenceIndex","getCommentsForSentence","sort","a","b","showTopCommentInline","topComment","formatNumber","num","toFixed","updateConnectionLine","sentenceEl","document","getElementById","sentenceRect","getBoundingClientRect","panelRect","containerRect","startX","right","startY","height","endX","endY","sqrt","pow","angle","atan2","PI","transformOrigin","formatTime","time","Date","toLocaleString","splitIntoSentences","text","regex","result","match","exec","sentence","trim","push","filter","comment","link","hasComments","getCommentLevel","count","min","highlightComments","index","unhighlightComments","handleAvatarError","src","globalComments","get","data","content_text","window","addEventListener"],"sources":["D:/ZhiHu/zhihu-bullet/wikitable-vue/client/src/components/ArticleContent.vue"],"sourcesContent":["<template>\r\n\t<div class=\"article-layout\">\r\n\t\t<!-- 内联评论控制面板 -->\r\n\t\t<div class=\"inline-comment-control\">\r\n\t\t\t<div class=\"control-group\">\r\n\t\t\t\t<label>\r\n\t\t\t\t\t<input type=\"checkbox\" v-model=\"showInlineComments\" /> 显示内联评论\r\n\t\t\t\t</label>\r\n\t\t\t</div>\r\n\r\n\t\t\t<div class=\"control-group\" v-if=\"showInlineComments\">\r\n\t\t\t\t<div class=\"slider-container\">\r\n\t\t\t\t\t<span class=\"slider-label\">\r\n\t\t\t\t\t\t<span>最低点赞数: {{ likeThreshold }}</span>\r\n\t\t\t\t\t\t<span class=\"max-value\">(最大: {{ maxLikeCount }})</span>\r\n\t\t\t\t\t</span>\r\n\t\t\t\t\t<input\r\n\t\t\t\t\t\ttype=\"range\"\r\n\t\t\t\t\t\tv-model=\"likeThreshold\"\r\n\t\t\t\t\t\t:min=\"0\"\r\n\t\t\t\t\t\t:max=\"maxLikeCount\"\r\n\t\t\t\t\t\t:step=\"likeStep\"\r\n\t\t\t\t\t\tclass=\"slider\"\r\n\t\t\t\t\t\t@input=\"updateLikeThreshold\" />\r\n\t\t\t\t</div>\r\n\t\t\t</div>\r\n\r\n\t\t\t<div class=\"control-group\" v-if=\"showInlineComments\">\r\n\t\t\t\t<div class=\"slider-container\">\r\n\t\t\t\t\t<span class=\"slider-label\">\r\n\t\t\t\t\t\t<span>最低回复数: {{ replyThreshold }}</span>\r\n\t\t\t\t\t\t<span class=\"max-value\">(最大: {{ maxReplyCount }})</span>\r\n\t\t\t\t\t</span>\r\n\t\t\t\t\t<input\r\n\t\t\t\t\t\ttype=\"range\"\r\n\t\t\t\t\t\tv-model=\"replyThreshold\"\r\n\t\t\t\t\t\t:min=\"0\"\r\n\t\t\t\t\t\t:max=\"maxReplyCount\"\r\n\t\t\t\t\t\t:step=\"replyStep\"\r\n\t\t\t\t\t\tclass=\"slider\"\r\n\t\t\t\t\t\t@input=\"updateReplyThreshold\" />\r\n\t\t\t\t</div>\r\n\t\t\t</div>\r\n\t\t</div>\r\n\r\n\t\t<!-- 左侧：文章整体评论 -->\r\n\t\t<div\r\n\t\t\tclass=\"left-panel global-comments-panel\"\r\n\t\t\tv-if=\"globalComments.length > 0\">\r\n\t\t\t<div class=\"panel-header\">\r\n\t\t\t\t<h4>文章整体评论 ({{ globalComments.length }})</h4>\r\n\t\t\t</div>\r\n\t\t\t<div class=\"panel-content\">\r\n\t\t\t\t<div\r\n\t\t\t\t\tv-for=\"comment in globalComments\"\r\n\t\t\t\t\t:key=\"'global-' + comment.comment_id\"\r\n\t\t\t\t\tclass=\"comment-item\">\r\n\t\t\t\t\t<div class=\"comment-user\">\r\n\t\t\t\t\t\t<img\r\n\t\t\t\t\t\t\t:src=\"comment.user_avatar || defaultAvatar\"\r\n\t\t\t\t\t\t\tclass=\"avatar\"\r\n\t\t\t\t\t\t\t@error=\"handleAvatarError\" />\r\n\t\t\t\t\t\t<span class=\"username\">{{ comment.user_nickname }}</span>\r\n\t\t\t\t\t</div>\r\n\t\t\t\t\t<div class=\"comment-text\">{{ comment.content }}</div>\r\n\t\t\t\t\t<div class=\"comment-stats\">\r\n\t\t\t\t\t\t<span class=\"like-count\" title=\"点赞数\">\r\n\t\t\t\t\t\t\t<svg class=\"icon\" viewBox=\"0 0 24 24\" width=\"14\" height=\"14\">\r\n\t\t\t\t\t\t\t\t<path\r\n\t\t\t\t\t\t\t\t\tfill=\"currentColor\"\r\n\t\t\t\t\t\t\t\t\td=\"M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z\" />\r\n\t\t\t\t\t\t\t</svg>\r\n\t\t\t\t\t\t\t{{ formatNumber(comment.like_count) }}\r\n\t\t\t\t\t\t</span>\r\n\t\t\t\t\t\t<span class=\"reply-count\" title=\"回复数\">\r\n\t\t\t\t\t\t\t<svg class=\"icon\" viewBox=\"0 0 24 24\" width=\"14\" height=\"14\">\r\n\t\t\t\t\t\t\t\t<path\r\n\t\t\t\t\t\t\t\t\tfill=\"currentColor\"\r\n\t\t\t\t\t\t\t\t\td=\"M12 3c5.514 0 10 3.592 10 8.007 0 4.917-5.144 7.961-9.91 7.961-1.937 0-3.384-.397-4.394-.644-1 .613-1.595 1.037-4.272 1.82.535-1.277.723-2.215.725-3.292C3.484 16.541 2 13