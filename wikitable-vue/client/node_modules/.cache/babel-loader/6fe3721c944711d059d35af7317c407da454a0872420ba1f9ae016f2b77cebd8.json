{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { ref, onMounted, computed, watch, nextTick } from \"vue\";\nimport api from \"@/api\";\nconst defaultAvatar = \"data:image/svg+xml;base64,\";\nexport default {\n  __name: 'ArticleContent',\n  setup(__props, _ref) {\n    let {\n      expose: __expose\n    } = _ref;\n    __expose();\n    const article = ref(null);\n    const sentences = ref([]);\n    const comments = ref([]);\n    const activeSentence = ref(null);\n    const articleContainer = ref(null);\n    const annotationPanel = ref(null);\n    const connectionLines = ref(null);\n    const lineStart = ref({\n      x: 0,\n      y: 0\n    });\n    const lineEnd = ref({\n      x: 0,\n      y: 0\n    });\n\n    // 计算连接线位置\n    const updateConnectionLine = () => {\n      if (activeSentence.value === null || !articleContainer.value || !annotationPanel.value) return;\n      const sentenceEl = document.getElementById(`sentence-${activeSentence.value}`);\n      if (!sentenceEl) return;\n      nextTick(() => {\n        const sentenceRect = sentenceEl.getBoundingClientRect();\n        const containerRect = articleContainer.value.getBoundingClientRect();\n        const panelRect = annotationPanel.value.getBoundingClientRect();\n        lineStart.value = {\n          x: containerRect.right - containerRect.left,\n          y: sentenceRect.top + sentenceRect.height / 2 - containerRect.top\n        };\n        lineEnd.value = {\n          x: panelRect.left - containerRect.left,\n          y: panelRect.top + 40 - containerRect.top\n        };\n      });\n    };\n\n    // 监听激活句子变化\n    watch(activeSentence, () => {\n      if (activeSentence.value !== null) {\n        updateConnectionLine();\n      }\n    });\n\n    // 格式化时间\n    const formatTime = time => {\n      if (!time) return \"\";\n      const date = new Date(time * 1000);\n      return date.toLocaleString();\n    };\n\n    // 分割句子\n    const splitIntoSentences = text => {\n      if (!text) return [];\n      const regex = /([^。！？.!?]+[。！？.!?]+)/g;\n      const result = [];\n      let match;\n      while ((match = regex.exec(text)) !== null) {\n        const sentence = match[0].trim();\n        if (sentence.length > 0) {\n          result.push(sentence);\n        }\n      }\n      return result.length > 0 ? result : [text];\n    };\n\n    // 获取某句子的相关评论\n    const getCommentsForSentence = sentenceIndex => {\n      return comments.value.filter(comment => comment.link === sentenceIndex);\n    };\n\n    // 检查句子是否有评论\n    const hasComments = sentenceIndex => {\n      return getCommentsForSentence(sentenceIndex).length > 0;\n    };\n\n    // 获取评论等级 (1-5)\n    const getCommentLevel = sentenceIndex => {\n      const count = getCommentsForSentence(sentenceIndex).length;\n      return Math.min(Math.floor(count / 3) + 1, 5);\n    };\n\n    // 高亮相关评论\n    const highlightComments = index => {\n      if (hasComments(index)) {\n        activeSentence.value = index;\n      }\n    };\n\n    // 取消高亮\n    const unhighlightComments = () => {\n      // 保留当前激活状态，让用户点击关闭按钮\n    };\n\n    // 处理头像加载错误\n    const handleAvatarError = e => {\n      e.target.src = defaultAvatar;\n    };\n\n    // 全局评论\n    const globalComments = computed(() => {\n      return comments.value.filter(comment => comment.link === -1);\n    });\n    onMounted(() => {\n      api.get(\"article\", {}, data => {\n        article.value = data[0];\n        sentences.value = splitIntoSentences(data[0].content_text);\n      });\n      api.get(\"comments\", {}, data => {\n        comments.value = data;\n      });\n      window.addEventListener(\"resize\", updateConnectionLine);\n      window.addEventListener(\"scroll\", updateConnectionLine, true);\n    });\n    const __returned__ = {\n      defaultAvatar,\n      article,\n      sentences,\n      comments,\n      activeSentence,\n      articleContainer,\n      annotationPanel,\n      connectionLines,\n      lineStart,\n      lineEnd,\n      updateConnectionLine,\n      formatTime,\n      splitIntoSentences,\n      getCommentsForSentence,\n      hasComments,\n      getCommentLevel,\n      highlightComments,\n      unhighlightComments,\n      handleAvatarError,\n      globalComments,\n      ref,\n      onMounted,\n      computed,\n      watch,\n      nextTick,\n      get api() {\n        return api;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","computed","watch","nextTick","api","defaultAvatar","article","sentences","comments","activeSentence","articleContainer","annotationPanel","connectionLines","lineStart","x","y","lineEnd","updateConnectionLine","value","sentenceEl","document","getElementById","sentenceRect","getBoundingClientRect","containerRect","panelRect","right","left","top","height","formatTime","time","date","Date","toLocaleString","splitIntoSentences","text","regex","result","match","exec","sentence","trim","length","push","getCommentsForSentence","sentenceIndex","filter","comment","link","hasComments","getCommentLevel","count","Math","min","floor","highlightComments","index","unhighlightComments","handleAvatarError","e","target","src","globalComments","get","data","content_text","window","addEventListener"],"sources":["D:/ZhiHu/zhihu-bullet/wikitable-vue/client/src/components/ArticleContent.vue"],"sourcesContent":["<template>\r\n\t<div class=\"article-layout\">\r\n\t\t<!-- 左侧：文章整体评论 -->\r\n\t\t<div\r\n\t\t\tclass=\"left-panel global-comments-panel\"\r\n\t\t\tv-if=\"globalComments.length > 0\">\r\n\t\t\t<div class=\"panel-header\">\r\n\t\t\t\t<h4>文章整体评论 ({{ globalComments.length }})</h4>\r\n\t\t\t</div>\r\n\t\t\t<div class=\"panel-content\">\r\n\t\t\t\t<div\r\n\t\t\t\t\tv-for=\"comment in globalComments\"\r\n\t\t\t\t\t:key=\"'global-' + comment.comment_id\"\r\n\t\t\t\t\tclass=\"comment-item\">\r\n\t\t\t\t\t<div class=\"comment-user\">\r\n\t\t\t\t\t\t<img\r\n